import requests

# Define the ChatGPT API endpoint
CHATGPT_API_ENDPOINT = 'https://api.openai.com/v1/engines/davinci-codex/completions'

# Define your OpenAI API key
OPENAI_API_KEY = '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'

# Define a function to send a message to ChatGPT and get a response
def get_chatgpt_response(message):
    headers = {
        'Content-Type': 'application/json',
        'Authorization': f'Bearer {OPENAI_API_KEY}'
    }
    data = {
        'prompt': message,
        'max_tokens': 60,
        'temperature': 0.7,
        'stop': ['\n']
    }
    response = requests.post(CHATGPT_API_ENDPOINT, headers=headers, json=data)
    response_json = response.json()
    chatgpt_response = response_json['choices'][0]['text'].strip()
    return chatgpt_response
